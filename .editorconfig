# Indentation settings
[*]
indent_style = space
indent_size = 2

# End of line
[*.{js,jsx,ts,tsx}]
end_of_line = lf
insert_final_newline = true

# Encoding
[*.{js,jsx,ts,tsx}]
charset = utf-8

# Trim whitespace
[*.{js,jsx,ts,tsx}]
trim_trailing_whitespace = true

# Max line length
[*.js]
max_line_length = 80
